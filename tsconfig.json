{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "files": [
    "src/pappel-components.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "out": "docs",
    "mode": "file",
    "exclude": "pappel-components.ts",
    "json": "docs",
    "name": "Pappel Components",
    "includeVersion": true,
    "entryPoint": "index"
  }
}
